{{!-- hidden advanced search, element ids are = SubmitZip, SearchInputSize, SearchInputSex, SearchInputAge, SearchInputBreed AO--}}
  <div class="form-group2">
    <div class="row">
      <div class="col-lg-12 col-md-6 col-sm-2">
      <br>
        <h5>Advanced search to locate your Perfect Match</h5>
          <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">Advanced Search</button>
      <div id="demo" class="collapse">
        <form>

          <div class="form-group">
        {{!-- <h5>Advanced Search</h5> --}}
          {{!-- <label for="exampleFormControlSelect1">Zip Code</label> --}}
            <input type="text" class="form-control" id="SubmitZip" placeholder="Zip Code">
          <div id="breeds">
            <select id="breeds-drop" class="custom-select">
              <option selected value="">Select a Breed</option>
            </select>
          </div>

          <label for="SearchInputSize"><h6>Size</h6></label>
            <select class="form-control" id="SearchInputSize">
              <option></option>
              <option>Small</option>
              <option>Medium</option>
              <option>Large</option>
              <option>Extra Large</option>
            </select>
          </div>

          <div class="form-group">
            <label for="SearchInputSex"><h6>Sex</h6></label>
              <select class="form-control" id="SearchInputSex">
                <option></option>
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>

          <div class="form-group">
            <label for="SearchInputAge"><h6>Age</h6></label>
              <select class="form-control" id="SearchInputAge">
              <option></option>
              <option>Baby</option>
              <option>Young</option>
              <option>Adult</option>
              <option>Senior</option>
            </select>
          </div>

            <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
